{
  "name": "consoles",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "lint": "npm run lint:style && npm run lint:es && npm run lint:type",
    "change:version": "npx esno ./scripts/change-version.ts",
    "commit": "git-cz",
    "i18n:report": "vue-cli-service i18n:report --src \"./src/**/*.?(js|vue)\" --locales \"./src/locales/**/*.json\"",
    "lint:es": "eslint \"src/**/*.{js,jsx,ts,tsx,vue,json,jsonc,json5}\" --config .eslintrc.js --fix --max-warnings=0",
    "lint:style": "stylelint \"src/**/*.{vue,scss,css}\" --config .stylelintrc.js --fix",
    "lint:type": "vue-tsc -noEmit",
    "postinstall": "i18n-inject-vscode && lint-inject-vscode",
    "test:unit:ci": "vue-cli-service test:unit --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@dao-style/core": "1.6.0",
    "@dao-style/extend": "1.6.1",
    "clipboard-copy": "^4.0.1",
    "core-js": "^3.8.3",
    "dayjs": "1.11.10",
    "normalize.css": "^8.0.1",
    "pinia": "^2.0.9",
    "vee-validate": "4.11.8",
    "vue": "^3.2.13",
    "vue-i18n": "9.5.0",
    "vue-router": "^4.0.3",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/cz-commitlint": "^16.0.0",
    "@dao-style/unplugin-extend": "0.0.6",
    "@dao-style/vue-cli-plugin-ci": "latest",
    "@dao-style/vue-cli-plugin-dao-style": "latest",
    "@dao-style/vue-cli-plugin-i18n": "latest",
    "@dao-style/vue-cli-plugin-lint": "latest",
    "@dao-style/vue-cli-plugin-pinia": "latest",
    "@dao-style/vue-cli-plugin-qiankun": "latest",
    "@dao-style/vue-cli-plugin-router": "latest",
    "@intlify/vue-i18n-loader": "^3.0.0",
    "@types/fs-extra": "^11.0.2",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.8",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "babel-jest": "^27.0.6",
    "commitizen": "^4.2.4",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsonc": "^2.7.0",
    "eslint-plugin-vue": "^8.4.0",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "jest": "^27.0.5",
    "jest-junit": "^13.0.0",
    "lint-staged": "^11.1.2",
    "postcss-html": "^1.5.0",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "semver": "^7.3.8",
    "stylelint": "^15.6.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.9.5",
    "vue-tsc": "^1.2.0",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E GIT_PARAMS"
  }
}
